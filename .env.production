# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# SHOPIFY CONFIGURATION (Production App)
# =============================================================================
SHOPIFY_API_KEY=YOUR_PROD_APP_CLIENT_ID
SHOPIFY_API_SECRET=YOUR_PROD_APP_CLIENT_SECRET
SHOPIFY_APP_URL=https://your-production-app.onrender.com
SCOPES=customer_read_customers,customer_read_orders,customer_read_store_credit_account_transactions,customer_read_store_credit_accounts,unauthenticated_read_product_listings

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
CLAUDE_API_KEY=YOUR_PROD_CLAUDE_API_KEY
AI_PROVIDER=claude

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Production database (PostgreSQL recommended)
DATABASE_URL=postgresql://username:password@hostname:port/database

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
REDIRECT_URL=https://your-production-app.onrender.com/auth/callback
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_IN_PRODUCTION

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
RENDER_SERVICE_NAME=harmony-assistant-prod

# =============================================================================
# LOGGING & ANALYTICS (Production)
# =============================================================================
ENABLE_STRUCTURED_LOGGING=true
LOG_LEVEL=info
ENABLE_CHAT_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# Production analytics (uncomment and configure)
# ANALYTICS_ENABLED=true
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your_production_mixpanel_token