# =============================================================================
# HARMONY ASSISTANT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Different environments should have their own .env files

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# SHOPIFY CONFIGURATION
# =============================================================================
# Get these from your Shopify Partner Dashboard
SHOPIFY_API_KEY=YOUR_APP_CLIENT_ID
SHOPIFY_API_SECRET=YOUR_APP_CLIENT_SECRET
SHOPIFY_APP_URL=https://your-app-url.com
SCOPES=customer_read_customers,customer_read_orders,customer_read_store_credit_account_transactions,customer_read_store_credit_accounts,unauthenticated_read_product_listings

# Optional: Custom shop domain for development
# SHOP_CUSTOM_DOMAIN=your-dev-shop.myshopify.com

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Claude API Configuration
CLAUDE_API_KEY=YOUR_CLAUDE_API_KEY

# Gemini API Configuration (optional - if using Gemini instead of Claude)
# GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Default AI provider: 'claude' or 'gemini'
AI_PROVIDER=claude

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL for Prisma (SQLite by default for development)
DATABASE_URL=file:./dev.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# OAuth redirect URL - update for your deployment environment
REDIRECT_URL=https://your-app-url.com/auth/callback

# Session secret for encryption (generate a secure random string)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# For Render.com deployment
RENDER_SERVICE_NAME=harmony-assistant

# For Shopify CLI during development
HMR_SERVER_PORT=8002
FRONTEND_PORT=8002

# =============================================================================
# LOGGING & ANALYTICS
# =============================================================================
# Enable structured logging (true/false)
ENABLE_STRUCTURED_LOGGING=true

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Analytics tracking (optional integrations)
# ANALYTICS_ENABLED=true
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_CHAT_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
