# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=staging
PORT=3000

# =============================================================================
# SHOPIFY CONFIGURATION (Staging App)
# =============================================================================
SHOPIFY_API_KEY=YOUR_STAGING_APP_CLIENT_ID
SHOPIFY_API_SECRET=YOUR_STAGING_APP_CLIENT_SECRET
SHOPIFY_APP_URL=https://your-staging-app.onrender.com
SCOPES=customer_read_customers,customer_read_orders,customer_read_store_credit_account_transactions,customer_read_store_credit_accounts,unauthenticated_read_product_listings

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
CLAUDE_API_KEY=YOUR_STAGING_CLAUDE_API_KEY
AI_PROVIDER=claude

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@staging-hostname:port/database

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
REDIRECT_URL=https://your-staging-app.onrender.com/auth/callback
SESSION_SECRET=staging-session-secret-change-this

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
RENDER_SERVICE_NAME=harmony-assistant-staging

# =============================================================================
# LOGGING & ANALYTICS (Staging)
# =============================================================================
ENABLE_STRUCTURED_LOGGING=true
LOG_LEVEL=debug
ENABLE_CHAT_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# Staging analytics (for testing)
# ANALYTICS_ENABLED=true
# GOOGLE_ANALYTICS_ID=G-STAGING-ID
# MIXPANEL_TOKEN=your_staging_mixpanel_token