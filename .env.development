# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# SHOPIFY CONFIGURATION (Development Store)
# =============================================================================
SHOPIFY_API_KEY=YOUR_DEV_APP_CLIENT_ID
SHOPIFY_API_SECRET=YOUR_DEV_APP_CLIENT_SECRET
SHOPIFY_APP_URL=https://your-ngrok-url.ngrok.io
SCOPES=customer_read_customers,customer_read_orders,customer_read_store_credit_account_transactions,customer_read_store_credit_accounts,unauthenticated_read_product_listings

# Development store domain
# SHOP_CUSTOM_DOMAIN=your-dev-store.myshopify.com

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
CLAUDE_API_KEY=YOUR_DEV_CLAUDE_API_KEY
AI_PROVIDER=claude

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=file:./dev.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
REDIRECT_URL=https://your-ngrok-url.ngrok.io/auth/callback
SESSION_SECRET=dev-session-secret-change-this

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
HMR_SERVER_PORT=8002
FRONTEND_PORT=8002

# =============================================================================
# LOGGING & ANALYTICS (Development)
# =============================================================================
ENABLE_STRUCTURED_LOGGING=true
LOG_LEVEL=debug
ENABLE_CHAT_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=false